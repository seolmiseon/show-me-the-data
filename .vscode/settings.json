{
  // Cursor AI 모델 설정
  // 이 설정은 이 워크스페이스에만 적용됩니다.
  
  "aiSettings": {
    // Composer (에이전트 모달) - 멀티모달 지원
    // 복잡한 아키텍처 분석에 적합한 모델 조합
    // gpt-5.1-codex-max: 최신 프론티어 모델 (매우 긴 컨텍스트, 자율 작업)
    "composerModel": "gpt-5.1-codex-max",
    "backgroundComposerModel": "gpt-4o-mini",
    
    // Cmd+K (빠른 편집) - 빠른 응답이 중요
    "cmdKModel": "gpt-4o-mini",
    "terminalCmdKModel": "gpt-4o-mini",
    
    // 모델 자동 전환 설정
    "modelDefaultSwitchOnNewChat": true,
    
    // 자동 전환에서 제외할 모델들
    "modelsWithNoDefaultSwitch": [
      "cursor-small"
    ],
    
    // 수동 모델 선택이 필요한 모드들
    "modelOverrideEnabled": ["Agent", "Plan"],
    
    // 완료된 모델 마이그레이션 (Cursor 내부 사용)
    "completedModelMigrations": []
  },
  
  // 멀티모달 지원 (이미지, 코드 분석 등)
  // 필요시 MCP 서버 추가 가능
  "mcpServers": {
    // 예시: 이미지 생성 서버 (필요시 활성화)
    // "image-gen": {
    //   "command": "npx imagegen-mcp",
    //   "env": {
    //     "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
    //   }
    // }
  },
  
  // 기본 에디터 모델
  "editor.defaultModel": "claude-sonnet-4",
  
  // 파일 제외 설정 (인덱싱에서 제외)
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.next": true,
    "**/venv": true,
    "**/.venv": true
  },
  
  // 검색 제외 설정
  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.next": true,
    "**/venv": true,
    "**/.venv": true,
    "**/package-lock.json": true
  }
}
